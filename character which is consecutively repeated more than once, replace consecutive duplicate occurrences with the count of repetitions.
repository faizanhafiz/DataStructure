public class Solution {
	public static String getCompressedString(String str) {
		// Write your code here.
        
        
        if(str.length()<1)
        {
            return str;
        }
        
        String result ="";
        
        char x = str.charAt(0);
        int count =0;
        
        for(int i=0;i<str.length();i++)
        {
            
            if(x==str.charAt(i))
            {
                count++;
				//result+=Character.toString(x);
                
            }
            
            else if(count==1)
            {
				result+=Character.toString(x);
                
                x=str.charAt(i);
                count=1;

            }
            else
            {
				result+=Character.toString(x)+count;
                 
                x=str.charAt(i);
                count=1;
            
            }
            
            
            
        }
        
        if(count==1)
        {
        result+=Character.toString(x);

        }
        else{
        result+=Character.toString(x)+count;

        }
        
        
      return result;  
        
	}

}
